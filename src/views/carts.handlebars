<div>
    <h1>Listado de Carritos</h1>

    {{#each carritos}}
    <div>
        <p>Carrito ID: {{_id}}</p>
        <p>Productos:</p>
        <ul>
            {{#each this.products}}
            <li>{{this.product}} - Cantidad: {{this.quantity}}</li>
            {{/each}}
        </ul>
    </div>
    <hr>
    {{/each}}

</div>